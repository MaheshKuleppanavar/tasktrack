<%- layout('layouts/boilerplate')%>
<body class="bg-light">
<div class="container my-3">
    <h1 class="text-center mb-4">ðŸ“‹My Tasks</h1>
    <div class="row">
        <h3 class="text-center">To do</h3>
        <%if(!tasks.length){%>
            <p class="text-center">No tasks found</p>
        <%}%>
        <% for(let task of tasks){ %>
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= task.title %>
                    </h5>
                    <p class="card-text">
                        <%= task.description %>
                    </p>
                    <p class="mb-1" id="status">
                        <strong>Status:</strong>
                        <span class="badge bg-info text-dark">
                            <%= task.status %>
                        </span>
                    </p>
                    <p class="mb-1">
                        <strong>Priority:</strong>
                        <span class="badge bg-warning text-dark">
                            <%= task.priority %>
                        </span>
                    </p>
                    <p class="mb-0">
                        <strong>Due Date:</strong><br>
                        <small class="text-muted">
                             <%if(task.duedate){%>
                                <%= task.duedate.toLocaleString('en-IN') %>
                            <%}%>
                        </small>
                    </p>
                     <p class="mb-1">
                        <strong>Created By:</strong>
                        <span class="badge  text-dark">
                            <%= task.user.username %>
                        </span>
                    </p>
                    <div class="d-flex align-items-center gap-3">
                        <form action="/tasks/<%=task._id%>/update?_method=PUT" method="POST">
                            <button onclick="toggleStatus()" class="btn btn-sm mt-1 btn-secondary">Done</button>
                        </form>
                        <form action="/tasks/<%=task._id%>?_method=DELETE" method="POST">
                            <button class="btn btn-sm mt-1 btn-danger">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
    </div>
    
    <div class="row mt-3">
        <h3 class="text-center">Completed</h3>
        <% for(let task of completed){ %>
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= task.title %>
                    </h5>
                    <p class="card-text">
                        <%= task.description %>
                    </p>
                    <p class="mb-1" id="status">
                        <strong>Status:</strong>
                        <span class="badge bg-info text-dark">
                            <%= task.status %>
                        </span>
                    </p>
                    <p class="mb-1">
                        <strong>Priority:</strong>
                        <span class="badge bg-warning text-dark">
                            <%= task.priority %>
                        </span>
                    </p>
                    <p class="mb-0">
                        <strong>Due Date:</strong><br>
                        <small class="text-muted">
                            <%if(task.duedate){%>
                                <%= task.duedate.toLocaleString('en-IN') %>
                            <%}%>
                        </small>
                    </p>
                    <div class="d-flex align-items-center gap-3">
                        <form action="/tasks/<%=task._id%>/incomplete?_method=PUT" method="POST">
                            <button id="complete" class="btn btn-success btn-sm mt-1 ">Completed</button>
                        </form>
                        <form action="/tasks/<%=task._id%>?_method=DELETE" method="POST">
                            <button class="btn btn-sm mt-1 btn-danger">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
    </div>
</div>
</body>
