<%- layout('layouts/boilerplate')%>
<body>
    <%- include('../includes/navbar.ejs')%>
    <form action="/tasks" method="POST" class="needs-validation" novalidate>
        <div class="row">            
        <div class="row">
            <h1 class="col-md-6 col-10 offset-1 offset-md-3 mt-3 mb-3">Add a New Task</h1>
            <div class="col-md-6 col-10 offset-1 offset-md-3 mb-3">
                <div class="mb-3">              
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="form-control" name="task[title]" required>
                    <div class="invalid-feedback">Title Required</div>
                </div>
                <div class="mb-3">              
                    <label for="description" class="form-label">Description</label>
                    <input type="text" class="form-control" name="task[description]">
                    <div class="valid-feedback">Description Optional</div>
                </div>
                <div class="mb-3">              
                    <label for="duedate" class="form-label">Due Date</label>
                    <input type="date" class="form-control" name="task[duedate]" required>
                    <div class="invalid-feedback">Due Date Required</div>
                </div>
                <div class="row">  
                        <div class="mb-3 col-md-6">              
                            <label for="priority" class="form-label">Prioroty</label>
                            <select name="task[priority]" id="priority" class="form-select mb-3">
                                <option selected value="low">Low</option>
                                <option value="medium">Medium</option>
                                <option value="high">High</option>
                            </select>
                            <div class="invalid-feedback">Priority Required</div>
                        </div>
                        <div class="mb-3 col-md-6">              
                            <label for="task[status]" class="form-label">Status</label>
                            <select name="task[status]" id="status" class="form-select mb-3">
                                <option selected value="pending">Pending</option>
                                <option value="completed">Compeletd</option>
                            </select>
                            <div class="invalid-feedback">Priority Required</div>
                        </div>
                </div>
                <button class="btn btn-primary" type="submit" disabled id="submitBtn">Submit</button>
            </div>
        </div>
    </form>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
    <script src="/js/script.js"></script>
</body>
